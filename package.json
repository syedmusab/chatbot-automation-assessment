{
  "name": "sauce-demo-cypress",
  "version": "1.0.0",
  "description": "Automated test suite for Chatbots",
  "scripts": {
    "test": "cypress run",
    "open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:allure": "cypress run --env allure=true",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "test:en": "cypress run --env language=en",
    "test:ar": "cypress run --env language=ar"
  },
  "devDependencies": {
    "@shelex/cypress-allure-plugin": "^2.41.2",
    "allure-commandline": "^2.34.1",
    "cypress": "^13.0.0",
    "cypress-xpath": "^2.0.1",
    "mochawesome": "^7.1.3",
    "string-similarity": "^4.0.4"
  }
}
